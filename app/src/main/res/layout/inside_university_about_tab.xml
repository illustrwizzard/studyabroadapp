<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.axis.axistrial.InsideUniversity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarInAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <ImageView
                        android:id="@+id/imagebannerUnv"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_imageView_in_universitytitle"

                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="76dp"

                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        app:layout_anchor="@+id/imagebannerUnv"
                        app:layout_anchorGravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imagebannerUnv" />


                </androidx.constraintlayout.widget.ConstraintLayout>


<LinearLayout

    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/University_name_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="University of Greenwich"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

</LinearLayout>



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location_new"/>
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/location_in_universitytitle"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Park Row, United Kingdom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/pin"/>
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                        <TextView

                            android:id="@+id/estd_in_university"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="ESTD 1890"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/starr"/>
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="0dp"/>
                        <TextView
                            android:id="@+id/rating_in_university"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="4"/>
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="0dp"/>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/globe"/>
                            <Space
                                android:layout_width="5dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:autoLink="web"
                                android:id="@+id/gotowebid"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="@string/hyperlink"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>



        </com.google.android.material.appbar.CollapsingToolbarLayout>








    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"

            android:layout_height="match_parent" android:orientation="vertical">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabMode="scrollable"


                app:tabTextColor="@color/black" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:allowClickWhenDisabled="false"
                android:layout_height="0dp"
                android:isScrollContainer="true"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_below="@id/tabs"
                />
        </LinearLayout></androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>