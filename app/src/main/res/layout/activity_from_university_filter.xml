<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.axis.axistrial.FromUniversityFilter"
    android:background="#D5D2D2"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/appbar_id2"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/first_page_backbtn2"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_back"/>
                <Space

                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    />


                <AutoCompleteTextView


                    android:id="@+id/search_text2"
                    android:queryHint="search here"
                    android:layout_width="0dp"
                    android:hint="University name"
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/searchviewdesign"/>
                <Space

                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    />

                <Button
                    android:id="@+id/showfilterpageid2"
                    android:background="@drawable/filter_logo"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    />
                <Space

                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    />
            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/blurlayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleviewinunv_id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />





    </RelativeLayout>



</LinearLayout>