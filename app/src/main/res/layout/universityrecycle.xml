<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linerainuniversity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:outlineSpotShadowColor="@color/white"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/unvTitle"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="61dp"
                    android:padding="3dp"
                    android:text="The University of Law"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/save_unv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignRight="@id/unvTitle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"

                    android:src="@drawable/bookmark3"
                    android:visibility="visible" />



            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#e0ebeb"
                android:paddingTop="10dp" />


            <RelativeLayout
                android:id="@+id/relative_idd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <androidx.cardview.widget.CardView
                    android:id="@+id/circleimg_inUnv"
                    android:layout_width="120dp"
                    android:layout_height="85dp"
                    app:cardCornerRadius="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/circleimg_inUnv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>


                <View
                    android:id="@+id/location_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/circleimg_inUnv"
                    android:background="@drawable/location_new" />

                <View
                    android:id="@+id/pin_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/unvLocation"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/circleimg_inUnv"
                    android:background="@drawable/pin"
                    android:padding="3dp" />

                <View
                    android:layout_below="@id/unvESTD"
                    android:id="@+id/save_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/circleimg_inUnv"
                    android:background="@drawable/starr"
                    android:padding="3dp" />


                <TextView
                    android:id="@+id/unvLocation"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/circleimg_inUnv"

                    android:padding="2dp"
                    android:text="Park Row, London"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/unvESTD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/unvLocation"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/circleimg_inUnv"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="ESTD 1890"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_below="@id/unvESTD"
                    android:id="@+id/unvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/circleimg_inUnv"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:padding="8dp">

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <Button
                    android:clickable="false"
                    android:id="@+id/inbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/getadmissionbutton"
                    android:text="view"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>